<?xml version="1.0"?>
<!--
     test1.smil: simple example
-->
<smil version="3.0" xmlns="http://www.w3.org/ns/SMIL">
  <head>
    <layout>
      <root-layout width="640" height="480" backgroundColor="black"/>
      <region xml:id="screen" left="0%" top="0" width="100%" height="100%" backgroundColor="yellow"/>
      <region xml:id="brush" left="33%" top="33%" width="33%" height="33%" backgroundColor="orange"/>
    </layout>
  </head>
  <body>
    <seq>
      <!-- draw red, green, blue rectangles,1 sec. each -->
      <par dur="2" >
        <brush region="brush" begin="1" color="#f40000" />
      </par>
      <brush region="brush" dur="1" color="#f400" />
      <brush region="brush" dur="1" color="#f4" />
      <brush region="brush" dur="2" color="yellow" />
    </seq>
  </body>
</smil>
