<?xml version="1.0"?>
<!--
     test1.smil: simple example
-->
<smil version="3.0" xmlns="http://www.w3.org/ns/SMIL">
  <head>
    <layout>
      <root-layout width="640" height="480" backgroundColor="black"/>
      <region xml:id="screen" left="0%" top="0" width="100%" height="100%" backgroundColor="yellow"/>
      <region xml:id="brush" left="0%" top="0%" width="100%" height="100%" backgroundColor="black" />
    </layout>
  </head>
  <body>
    <seq dur="12">
      <!-- draw red, green, blue rectangles,1 sec. each -->
      <brush region="brush" begin="2" dur="2" color="red" />
      <brush region="brush" dur="2" color="#00ff00" />
      <brush region="brush" dur="2" color="blue"/>
      <brush region="brush" dur="2" color="white" />
      <brush region="brush" dur="2" color="black" />
    </seq>
  </body>
</smil>
