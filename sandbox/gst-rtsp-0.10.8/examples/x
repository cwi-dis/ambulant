	int rgb_idx = length - 1;
	int rgba_idx = app->datasize - 1;
	for (; rgba_idx >= 0; rgba_idx -= 4) {
	  rgb_buffer[rgb_idx--] = rgb_buffer[rgba_idx - 1];
	  rgb_buffer[rgb_idx--] = rgb_buffer[rgba_idx - 2];
	  rgb_buffer[rgb_idx--] = rgb_buffer[rgba_idx - 3];
	}
	unsigned int length = (app->datasize/4)*3;
	char* rgba_buffer = app->databuffer;
	char* rgb_buffer;
	free(rgb_buffer);
